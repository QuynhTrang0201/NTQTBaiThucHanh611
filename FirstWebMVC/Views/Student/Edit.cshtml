@model FirstWebMVC.Models.Student
@{
    ViewData["Title"]= "Edit";
}
<h4>Sua Thong Tin Sinh Vien</h4>
<hr/>
<div class="row">
    <div class ="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="StudentID" class="control-label"></label>
                <input type="hidden" asp-for="StudentID"/>
            <div class="form-group">
                <label asp-for="StudentName" class="control-label"></label>
                <input asp-for="StudentName" class="form-control">
                <span asp-asp-validation-for="StudentName" class ="text-danger"></span>
            </div>
            <br>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary"/>
                <a class="btn btn-success" asp-action="Index">Danh Sach Sinh Vien</a>

            </div>
        </form>
    </div>
</div>